{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": ["xo-typescript"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/indent": "off",
        "@typescript-eslint/object-curly-spacing": "off",
        "no-mixed-operators": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": "off",
    "object-curly-spacing": "off",
    "indent": ["error", 2],
    "operator-linebreak": "off",
    "new-cap": "off"
  }
}
